<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express Blog</title>
</head>
<body>
    <header>
        <h1><%= article.title %></h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/articles">Articles Index</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h4>Authored by <%= article.authoredBy.name %></h4>
        <section>
            <%= article.body %>
            <a href="/articles/<%= article._id %>/edit">Edit this Article</a>
            <form action="/articles/<%= article._id %>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE this article">
            </form>
        </section>
        <form action="/articles/<%= article._id %>/reviews" method="POST">
            <textarea name="body" type="text"></textarea>
            <select name="rating">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <input type="submit" value="Rate Article">
        </form>
        <section>
            <% article.reviews.forEach(r => { %>
                <div>
                    <p><%= r.body %></p>
                    <p><small><%= r.rating %></small></p>
                </div>
            <% }) %>
        </section>
    </main>
</body>
</html>